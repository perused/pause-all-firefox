{

    "manifest_version": 2,
    "name": "Pause All Extensions",
    "version": "1.0",
  
    "description": "Easily pause and unpause all other Firefox extensions.",
    "homepage_url": "https://github.com/perused/pause-all-firefox",
    "icons": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },

    "permissions": [
        "activeTab"
      ],
    
      "browser_action": {
        "default_icon": "icons/icon-48.png",
        "default_title": "Pause All",
        "default_popup": "popup/pause_all.html"
      }
  
  }
  