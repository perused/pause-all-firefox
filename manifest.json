{

    "manifest_version": 2,
    "name": "Pause All Extensions",
    "version": "1.0",
  
    "description": "Easily pause and unpause all other Firefox extensions.",
  
    "icons": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.mozilla.org/*"],
        "js": ["borderify.js"]
      }
    ]
  
  }
  